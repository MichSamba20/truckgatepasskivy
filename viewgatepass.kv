<EntView>:
    name: "entview"
    grid_scroll: grid_scroll
    GridLayout:
        cols: 1
        size_hint_y: 1
        GridLayout:
            size_hint_y: .2
            id: grid_head
            cols: 6
            col_force_default: True
            col_default_width: 170
            row_force_default: True
            row_default_height: 60




            Label:
                text: "No"
            Label:
                text: "DAY"
            Label:
                text: "DRIVER"
            Label:
                text: "TRUCK"
            Label:
                text: "SECURITY"
            Label:
                text: "TIME"

        ScrollView:
            size_hint_y: 1

            do_scroll_y: True
            id: scroll_view

            GridLayout:
                pos_hint: {"top": 0.7}
                cols: 6
                id: grid_scroll
                col_force_default: True
                col_default_width: 170
                size_hint_y: None
                height: self.minimum_height

                Label:
                    id: cl6
                    size: self.texture_size
                    font_size: 15
                    text_size: self.width, None
