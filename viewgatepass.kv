                    line_height: 2
                Label:
                    id: cl2
                    size: self.texture_size
                    font_size: 15
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: 'center'
                    line_height: 2
                Label:
                    id: cl3
                    font_size: 15
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: 'center'
                    line_height: 2
                Label:
                    id: cl4
                    font_size: 15
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: 'center'
                    line_height: 2
                Label:
                    id: cl5
                    font_size: 15
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: 'center'
                    line_height: 2

        BoxLayout:
            size_hint_y: .4
