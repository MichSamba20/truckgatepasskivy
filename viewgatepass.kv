            pos_hint: {'center_x': 0.5}
            height: root.height/5
            id: sbtn
            on_press:
                app.root.current = 'extview'
        Button:
            text: "CHECK TRUCK"
            size_hint: 0.5, None
            pos_hint: {'center_x': 0.5}
            height: root.height/5
            on_press:
                app.root.current= 'checktruck'

